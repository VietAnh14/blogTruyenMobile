<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="chapter"
            type="com.vianh.blogtruyen.data.model.Chapter" />
        <variable
            name="viewModel"
            type="com.vianh.blogtruyen.ui.mangaInfo.MangaInfoViewModel" />
        <variable
            name="position"
            type="Integer" />
    </data>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:fitsSystemWindows="false"
        android:layout_height="50dp"
        android:background="@drawable/bottom_border" >
        <TextView
            android:id="@+id/chapterName"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> viewModel.onChapterClick(chapter, position)}"
            android:background="?attr/selectableItemBackground"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@{chapter.read ? @color/colorAccent : @color/lightGray}"
            android:text="@{chapter.name, default=`This is a chapter`}" />
    </FrameLayout>
</layout>